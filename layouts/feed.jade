doctype xml
rss(version='2.0',
	xmlns:content='http://purl.org/rss/1.0/modules/content/',
	xmlns:wfw='http://wellformedweb.org/CommentAPI/',
	xmlns:dc='http://purl.org/dc/elements/1.1/'
	xmlns:atom='http://www.w3.org/2005/Atom')
	channel
	title= global.title
	atom:link(href='/feed.xml', rel='self', type='application/rss+xml')
	link= global.url
	description= global.description
	pubDate= moment(articles[0].date).format('DD MMM YYYY')
	generator Metalsmith
	language en
	for article in articles
		- var permalink = global.url + article.path
		item
			title= article.title
			link= permalink
			pubDate= moment(article.date).format
			guid(isPermaLink='true')= permalink
			author= article.author
			//- passing locals.url resolves all relative urls to absolute
			description= article.teaser