doctype html
include author
block vars
	- var bodyclass = null;
html(lang='en')
	head
		block head
			meta(charset='utf-8')
			meta(http-equiv='X-UA-Compatible', content='IE=edge,chrome=1')
			meta(name='viewport', content='width=device-width')
			title
				block title
					=global.title
			link(rel='alternate', href='/feed.xml', type='application/rss+xml', title=global.description)
			link(rel='stylesheet', href='http://fonts.googleapis.com/css?family=Anonymous+Pro:400,700,400italic,700italic|Oswald|Open+Sans|Droid+Sans+Mono')
			link(rel='stylesheet', href='/css/main.css')
	body(class=bodyclass)
		#fb-root
		script.
			(function(d, s, id) {
			var js, fjs = d.getElementsByTagName(s)[0];
			if (d.getElementById(id)) return;
			js = d.createElement(s); js.id = id;
			js.src = "//connect.facebook.net/en_US/all.js#xfbml=1&appId=581717528549997";
			fjs.parentNode.insertBefore(js, fjs);
			}(document, 'script', 'facebook-jssdk'));
		script.
			!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="https://platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");
		header.header
			div.content-wrap
				block header
					div.logo
						h1
							img(src="/img/small-upside-down.png", height="80px", style="vertical-align: middle; padding: 10px")
							a(href="/")= global.title
		div#content
			div.content-wrap
				block content
		footer
			div.content-wrap
				block footer
					//section.about
						img.gravatar(src="http://www.gravatar.com/avatar/5d53209c0fb26aca6b6235d57347ea28?s=100")
						//!=contents['about.md'].html
					section.connect
						h1 Connect
						div
							a(href="https://twitter.com/IrrationalistCA")
								img(src="https://g.twimg.com/Twitter_logo_blue.png", height="29px" width="29px")
								span @IrrationalistCA
						div
							a(href="https://www.facebook.com/IrrationalistCA")
								img(src="/img/fblogo.png")
								span facebook.com/IrrationalistCA
						div
							a(href="mailto:info@irrationalist.ca")
								img(src="/img/mail.png", height="29px", width="29px")
								span info@irrationalist.ca
					section.copy &copy; #{ new Date().getFullYear() } #{ global.title }. All rights reserved.
